<form class="form-horizontal">
	<fieldset>
		<legend>Offsets</legend>


		<div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3"></div>
            <div class="span2"><h4>X</h4></div>
            <div class="span2"><h4>Y</h4></div>
            <div class="span2"><h4>Z</h4></div>
        </div>

		<div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3">
                <label class="control-label">{{ _('Tool 1:') }}</label>
            </div>
            <div class="input-append span2">
				<input type="number" step="any" class="input-mini text-right" value="0" disabled="disabled" />
                <span class="add-on">mm</span>
            </div>
            <div class="input-append span2">
				<input type="number" step="any" class="input-mini text-right" value="0" disabled="disabled" />
                <span class="add-on">mm</span>
            </div>
            <div class="input-append span2">
				<input type="number" step="any" class="input-mini text-right" value="0" disabled="disabled"/>
				<span class="add-on">mm</span>
            </div>
        </div>

		<div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3">
                <label class="control-label">{{ _('Tool 2:') }}</label>
